<?xml version="1.0"?>
<config>
    <modules>
        <Achang_Scene7>
            <version>0.5.8</version>
        </Achang_Scene7>
    </modules>
    <global>
        <models>
            <scenescene7>
                <class>Achang_Scene7_Model</class>
                <resourceModel>scenescene7_resource</resourceModel>
            </scenescene7>
            <scenescene7_resource>
                <class>Achang_Scene7_Model_Resource</class>
                <entities>
                    <group>
                        <table>scene_scene7_group</table>
                    </group>
                    <group_sceneitem_link>
                        <table>scene_scene7_group_sceneitem_link</table>
                    </group_sceneitem_link>
                    <product_group_link>
                       <table>scene_scene7_product_group_link</table>
                    </product_group_link>
                    <product_sceneitem_link>
                       <table>scene_scene7_product_sceneitem_link</table>
                    </product_sceneitem_link>
                    <scenescene7>
                        <table>scene_eav_scenescene7_entity</table>
                    </scenescene7>
                    <scenescene7_entity_varchar>
                        <table>scene_eav_scenescene7_entity_varchar</table>
                    </scenescene7_entity_varchar>
                    <scenescene7_entity_int>
                        <table>scene_eav_scenescene7_entity_int</table>
                    </scenescene7_entity_int>
                    <product_default_jewelgroup>
                        <table>scene_scene7_product_default_jewelgroup</table>
                    </product_default_jewelgroup>
                    <product_default_goodsgroup>
                        <table>scene_scene7_product_default_goodsgroup</table>
                    </product_default_goodsgroup>
                    <product_option_description>
                        <table>catalog_product_option_description</table>
                    </product_option_description>
                    <product_option_type_detail>
                        <table>catalog_product_option_type_detail</table>
                    </product_option_type_detail>
                </entities>
            </scenescene7_resource>
            <catalog>
                <rewrite>
                    <product_option>Achang_Scene7_Model_Catalog_Product_Option</product_option>
                    <product_option_value>Achang_Scene7_Model_Catalog_Product_Option_Value</product_option_value>
                    <product_option_type_default>Achang_Scene7_Model_Catalog_Product_Option_Type_Default</product_option_type_default>
                </rewrite>
            </catalog>
        </models>
        <resources>
            <scenescene7_setup>
                <setup>
                    <module>Achang_Scene7</module>
                    <class>Achang_Scene7_Model_Mysql4_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </scenescene7_setup>
            <scenescene7_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </scenescene7_write>
            <scenescene7_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </scenescene7_read>
        </resources>
          
        <catalog>
            <product>
                <type>
                     <scene_jewel_product translate="label" module="scenescene7">
                        <label>Jewel Product</label>
                        <model>scenescene7/product_type_jewel</model>
                        <composite>0</composite>
                        <is_qty>1</is_qty>
                        <price_model>scenescene7/product_price_jewel</price_model>
                    </scene_jewel_product>
                    <scene_goods_product translate="label" module="scenescene7">
                        <label>Goods Product</label>
                        <model>scenescene7/product_type_goods</model>
                        <composite>0</composite>
                        <is_qty>1</is_qty>
                        <price_model>scenescene7/product_price_goods</price_model>
                    </scene_goods_product>
                </type>
                <options>
                    <custom>
                        <groups>
                            <scene7select translate="label" module="scenescene7">
                                <label>Scene7 Attribute</label>
                                <render>scenescene7/adminhtml_catalog_product_edit_tab_options_type_select</render>
                                <types>
                                    <scene7_drop_down translate="label" module="scenescene7">
                                        <label>Scene7 Drop-down</label>
                                    </scene7_drop_down>
                                </types>
                            </scene7select>
                        </groups>
                    </custom>
                </options>
            </product>
        </catalog>
        
        <blocks>
            <scenescene7>
                <class> Achang_Scene7_Block</class>
            </scenescene7>
            <adminhtml>
                <rewrite>
                    <catalog_product_edit_tab_options_option>Achang_Scene7_Block_Adminhtml_Catalog_Product_Edit_Tab_Options_Option</catalog_product_edit_tab_options_option>
                </rewrite>
            </adminhtml>
        </blocks>
        <helpers>
            <scenescene7>
                <class>Achang_Scene7_Helper</class>
            </scenescene7>
        </helpers>
        <events>
            <scenescene7_group_changed>
                    <observers>
                        <scenescene7_group_changed_event>
                            <class>scenescene7/observer</class>
                            <method>groupChanged</method>
                        </scenescene7_group_changed_event>
                    </observers>
            </scenescene7_group_changed>
            <scenescene7_sceneitem_changed>
                    <observers>
                        <scenescene7_sceneitem_changed_event>
                            <class>scenescene7/observer</class>
                            <method>sceneitemChanged</method>
                        </scenescene7_sceneitem_changed_event>
                    </observers>
            </scenescene7_sceneitem_changed>
            <adminhtml_catalog_product_edit_prepare_form>
                <observers>
                    <scenescene7_observer>
                        <class>scenescene7/observer</class>
                        <method>prepareProductForm</method>
                    </scenescene7_observer>
                </observers>
            </adminhtml_catalog_product_edit_prepare_form>
        </events>
    </global>
    <frontend>
        <layout>
            <updates>
                <scenescene7>
                    <file>achang_scene7.xml</file>
                </scenescene7>
            </updates>
        </layout>
        <routers>
            <scenescene7>
                <use>standard</use>
                <args>
                    <module>Achang_Scene7</module>
                    <frontName>scenescene7</frontName>
                </args>
            </scenescene7>
        </routers>
    </frontend>
    <admin>
        <routers>
            <scenescene7_admin>
                <use>admin</use>
                <args>
                    <module>Achang_Scene7</module>
                    <frontName>scenescene7_admin</frontName>
                </args>
            </scenescene7_admin>
        </routers>
    </admin>
    <adminhtml>
        <layout>
            <updates>
                <scenescene7>
                    <file>achang_scene7.xml</file>
                </scenescene7>
            </updates>
        </layout>
        <acl>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <scenescene7 translate="title" module="scenescene7">
                                            <title>Scene7 Settings</title>
                                        </scenescene7>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>
</config>